@model GR_MVC_17.DTO.SeguimientoRegistro_DTO

@{
    ViewBag.Title = "4.1- Crear Registro Final";
    var fechaActual = DateTime.Now.ToShortDateString();


}

<div id="msnCorrecto" class=""></div>

