@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label col-md-2">Herramienta</span>
            <div class="col-md-10">
                <input type="text" id="txtHerramienta" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="btnNuevaHerramienta" value="Crear Herramienta" class="btn btn-success" />
            </div>
        </div>
    </div>
}



    <script type="text/javascript">
        $(function () {

            $("#btnNuevaHerramienta").click(function () {
                //debugger;
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: '{herramientaNueva: "' + $("#txtHerramienta").val() + '", idUsuario: "' + @ViewBag.idUsuario + '", idPerfil: "' + @ViewBag.IdPerfil + '" }',
                    url: '@Url.Action("_CrearHerramienta", "Home")',
                    success: function (response) {
                        //alert("Ok boton crear herramienta")
                        $("#Modal_Crear_Herramienta").modal("hide");
                        window.location.reload();
                    },
                    error: function (response) {
                        alert("Se produjo algún error al crear la herramienta del usuario")
                        $("#Modal_Crear_Herramienta").modal("hide");
                        window.location.reload();
                    }



                });

            });

        });


    </script>







