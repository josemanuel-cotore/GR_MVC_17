@model List<GR_MVC_17.DTO.Herramienta_DTO>
@{
    ViewBag.Title = "3.- Herramientas del Usuario";

    int _idusuario = 0;
    _idusuario = ViewBag.IdUsuario;

        <div class="container">

            <div class="row">
                <div class="col">
                    <h2 style="color:white">@ViewBag.TemaPerfil</h2>
                </div>
            </div>

            <div class="row" style="margin-bottom:5%">
                <div class="col-md-8">

                </div>
                <div class="col" style="text-align:left">
                    @*<button type="button" class="btn btn-primary btn-sm" onclick="abrirModalOcultarPerfil()" data-bs-toggle="modal" data-bs-target="#Modal_Ocultar_Perfil">Ocultar Perfil</button>*@
                </div>
                <div class="col" style="text-align:right">
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Registro", "Home", new { idUsuario = _idusuario, pagina = 1 })">Volver</a>
                </div>

            </div>

            <div class="row">
                    <table class="table" style="opacity:0.6">
                        <tr>
                            <th>
                                @Html.Label("Foto")
                            </th>
                            <th>
                                @Html.Label("Nombre")
                            </th>
                            <th>
                                @Html.Label("Tipo")
                            </th>
                            <th>
                                @Html.Label("Km")
                            </th>
                        </tr>

                        @foreach (var herramienta in Model)
                        {
                            <tr class="ratio-16x9" style="font-size:smaller">
                                <td>
                                    <img src="@herramienta.Imagen" class="img-fluid" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => herramienta.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => herramienta.Tipo)
                                </td>
                                <td>
                                    @if (herramienta.Km > 0)
                                    {
                                        @Html.DisplayFor(modelItem => herramienta.Km)
                                    }
                                </td>
                            </tr>
                        }

                    </table>
            </div>
        </div>

}


<!-- Modal Crear Nueva Herramienta -->
<div class="modal fade" id="Modal_Crear_Herramienta" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Crear Nueva Herramienta</h4>
            </div>
            <div class="modal-body">
                <div id="resHerramienta"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info btn-sm" data-dismiss="modal">Volver</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal Ocultar Perfil -->
<div class="modal fade" id="Modal_Ocultar_Perfil" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color:black; border:3px solid grey">
            <div class="modal-header">
                <h4 class="modal-title" style="color:white">Ocultar Perfil</h4>
            </div>
            <div class="modal-body">
                <div id="resOcultarPerfil"></div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


<script>


    function funcionCrearHerramienta() {
        //debugger;
        $.ajax({
            type: "POST",
            dataType: "html",
            data: { idUsuario: @ViewBag.IdUsuario, idPerfil: @ViewBag.IdPerfil},
            url: '@Url.Action("_PasoParaCrearHerramienta", "Home")',
            success: function(response) {
                $("#resHerramienta").html("");
                $("#resHerramienta").html(response);
            },
            error: function (response) {
                alert("fallo en modal crear herramienta")
            }



        });

        }

        function abrirModalOcultarPerfil() {

        //debugger;

        var miTabla = "PerfilUsuario";

        $.ajax({
            cache: false,
            async: true,
            type: "POST",
            dataType: "html",
            data: { id: @ViewBag.IdPerfil, tabla: miTabla, idUsuario: @ViewBag.IdUsuario},
            url: "@Url.Action("procesoParaEliminarOcultar", "Home")",
            success: function (response) {
                $('#resOcultarPerfil').html('');
                $('#resOcultarPerfil').html(response);
            },

            error: function (response) {

                if (response.ok == false) {
                    $("#resErrorOcultarPerfil").html(response.mensaje);
                }
            }


        });


    }


</script>



